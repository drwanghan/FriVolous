mklib     = static

#templates
[template-shared-gnu]
compiler     = gnu
cflags       = $CSHARED_GNU $OPTIMIZE
lflags       = $LSHARED $OPTIMIZE
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
exclude_dirs = $EXDIRS
colors       = True
quiet        = False
log          = True
jobs         = 2

[template-static-gnu]
compiler     = gnu
cflags       = $CSTATIC_GNU $OPTIMIZE
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
exclude_dirs = $EXDIRS
colors       = True
quiet        = False
log          = True
jobs         = 2

[template-shared-gnu-debug]
compiler     = gnu
cflags       = $CSHARED_GNU $DEBUG_GNU
lflags       = $LSHARED $DEBUG_GNU
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
exclude_dirs = $EXDIRS
colors       = True
quiet        = False
log          = True
jobs         = 2

[template-static-gnu-debug]
